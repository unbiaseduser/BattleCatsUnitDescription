<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_rectangle_black"
        android:alpha="0.4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/ponos_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/ponos_quotes"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/refresh_quote_widget"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toEndOf="@id/ponos_quote"
            android:layout_alignTop="@id/ponos_quote"
            android:layout_marginStart="16dp"
            android:src="@drawable/refresh"/>

        <TextView
            android:id="@+id/quote_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/refresh_quote_widget"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>